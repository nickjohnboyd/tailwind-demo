<div class="bg-gray-900 h-12 flex items-center">
    <a class="text-white no-underline text-lg ml-5" href="">tailwind-demo</a>
    <button class="" @onclick="ToggleNavMenu">
        <span class=""></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="flex flex-col justify-center">
        <li class="p-2 py-3 mx-4 mt-3 hover:bg-opacity-25 hover:bg-gray-400 rounded">
            <NavLink class="text-white flex items-center" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> 
                <span>Home</span>
            </NavLink>
        </li>
        <li class="p-2 py-3 mx-4 mt-3 hover:bg-opacity-25 hover:bg-gray-400 rounded">
            <NavLink class="text-white flex items-center" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span>
                <span>Counter</span>
            </NavLink>
        </li>
        <li class="p-2 py-3 mx-4 mt-3 hover:bg-opacity-25 hover:bg-gray-400 rounded">
            <NavLink class="text-white flex items-center" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span>
                <span>Fetch data</span>
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
