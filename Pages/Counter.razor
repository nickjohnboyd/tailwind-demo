@page "/counter"

<h1 class="text-4xl font-medium">Counter</h1>

<p>Current count: @currentCount</p>

<button class="bg-blue-600 rounded px-3 py-2 text-white mt-3" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
